{
  "name": "faker-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for generating fake/mock data using Faker.js",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "faker-mcp-server": "./dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "faker",
    "fake-data",
    "mock-data",
    "test-data",
    "data-generation",
    "typescript"
  ],
  "author": {
    "name": "Funs Janssen",
    "email": "funs.janssen@example.com",
    "url": "https://fjan.nl"
  },
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/funsjanssen/faker-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/funsjanssen/faker-mcp/issues"
  },
  "homepage": "https://github.com/funsjanssen/faker-mcp#readme",
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "randexp": "^0.5.3",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
